
<h1>Channels</h1>
<div class='channels'>
  <% if @channels.empty? %>
      <h3>No <%= object_type %> channels. Create a new one or <a href="/">See all channels</a> </h3>
  <% end %>

  <% @channels.each do |channel| %>
    <div class='channel'>

      <h2>
        <%= channel.name %> 
        (<a href="/channels/<%=channel.object_type%>"><%=channel.object_type.pluralize %></a>)
      </h2>
      <p><%= channel.description %></p>

      <ul>
        <% channel.items.each do |item| %>
          <li> <a href="<%=item.url%>" target="_blank"> <%= item.name %></a> </li>
        <% end %>
      </ul>

      <div class='add-item'>
        <h3>Add <%=channel.object_type%></h3>
        <%= form_with(model: channel.items.build , url: { :action => "create", :controller => "items" }, local: true ) do |form| %>
          <div class="field">
            <%= form.label :name %>
            <%= form.text_field :name %>
          </div>

          <div class="field">
            <%= form.label :url %>
            <%= form.text_field :url %>
          </div>
          <%= form.hidden_field :channel_id, :value => channel.id %>

          <div class="actions">
            <%= form.submit %>
          </div>
        <% end %>
      </div>

    </div>
  <% end %>
</div>

<div class='create-channel'>
  <h1>Create channel</h1>
  <%= form_with(model: @channel, local: true) do |form| %>
    <% if @channel.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@channel.errors.count, "error") %> prohibited this item from being saved:</h2>

        <ul>
          <% @channel.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>


    <div class="field">
      <%= form.label :description %>
      <%= form.text_field :description %>
    </div>

    <% if object_type %>
      <%= form.hidden_field :object_type, :value => object_type%>
    <% else %>
      <div class="field">
        <%= form.label :object_type %>
        <%= form.text_field :object_type %>
      </div>
    <% end %>


    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>
