<% if object_type %>
<h1><%=object_type%> lists</h1>
<% else %>
<h1>All lists</h1>
<% end %>

<% if @channels.empty? %> 
    <div class="message">No <%= object_type %> lists. Create a new one or <a href="/">See all channels</a> </div>
  <% else %>
  <div class='channels'>
    <%= render @channels, condensed_view: true %>
  </div>
<% end %>

<% if current_user %>
  <div class="message"><a href="/users">Go to your profile</a> to create a new channel</a> </div>
<% else %>
  <div class="message"><a href="/sign_in">Sign in</a> to create a new channel</a> </div>
<% end %>

<ul class='votes'>
  <%= render @votes %>
</ul>

